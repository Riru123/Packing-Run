<div class="background">
  <div class="checklist">
    <h5 class="title">Europe list</h5>

  <%= form_with model: @item, data: { controller: "submit-form", action: "submit->submit-form#submitForm" }, html: { class: "form-inline" } do |f| %>
    <%= f.text_field :title, class: "form-control" %>
    <%= hidden_field :commit, value: "submit" %>
  <% end %>

      <div class="scroll">
        <div class="lists">
          <ul>
            <% @waiting_lists.sort_by { |item| -item[:id] }.each do |item| %>
              <li class="list" data-item-id="<%= item.id %>" data-controller="checked-list">
                <%= form_for(item, url: item_path(item), method: :patch, html: { class: "status-form", data: { target: "checked-list.form" } }) do |f| %>
                  <%= f.check_box :completed, class: "status-checkbox", checked: item.completed, data: { target: "checked-list.checkbox" } %>
                  <%= f.label item.title %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="gray" class="bi bi-three-dots-vertical" viewBox="0 0 16 16" style="display: inline-block; float: right;">
                  <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0"/>
                </svg>
                <% end %>
              </li>
            <% end %>
          </ul>


        </div>
      </div>
  </div>

  <!-- HTML -->
  <div class="start" data-controller="play-pause" data-action="click->play-pause#togglePlayPause">
    <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="#8298fd" class="bi bi-play-circle-fill" viewBox="0 0 16 16" data-target="play-pause.icon">
      <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M6.79 5.093A.5.5 0 0 0 6 5.5v5a.5.5 0 0 0 .79.407l3.5-2.5a.5.5 0 0 0 0-.814z"/>
    </svg>
  </div>

  <audio>
    <source src="/audio/shuttle_run_start.mp3" type="audio/mpeg">
  </audio>

  <div style="position: relative;">
    <!-- SVG アイコン -->
    <svg xmlns="http://www.w3.org/2000/svg" width="300" height="300" fill="#e0ecff" class="bi bi-suitcase-lg-fill" viewBox="0 0 16 16">
      <path d="M7 0a2 2 0 0 0-2 2H1.5A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14H2a.5.5 0 0 0 1 0h10a.5.5 0 0 0 1 0h.5a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2H11a2 2 0 0 0-2-2zM6 2a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1zM3 13V3h1v10zm9 0V3h1v10z"/>
    </svg>

    <!-- パーシャル -->
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 250px; height: 200px; background-color: #e0ecff; z-index: 1;">
      <%= render partial: 'shared/done_list' %>
    </div>
  </div>

  <!-- モーダル -->
  <div class="modal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Modal body text goes here.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>


    

    <div class="approach">

      <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-person-walking" viewBox="0 0 16 16" style="font-size: 24px;">
        <path d="M9.5 1.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0M6.44 3.752A.75.75 0 0 1 7 3.5h1.445c.742 0 1.32.643 1.243 1.38l-.43 4.083a1.8 1.8 0 0 1-.088.395l-.318.906.213.242a.8.8 0 0 1 .114.175l2 4.25a.75.75 0 1 1-1.357.638l-1.956-4.154-1.68-1.921A.75.75 0 0 1 6 8.96l.138-2.613-.435.489-.464 2.786a.75.75 0 1 1-1.48-.246l.5-3a.75.75 0 0 1 .18-.375l2-2.25Z"/>
        <path d="M6.25 11.745v-1.418l1.204 1.375.261.524a.8.8 0 0 1-.12.231l-2.5 3.25a.75.75 0 1 1-1.19-.914zm4.22-4.215-.494-.494.205-1.843.006-.067 1.124 1.124h1.44a.75.75 0 0 1 0 1.5H11a.75.75 0 0 1-.531-.22Z"/>
      </svg>

      <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: <%= @percentage %>%;" aria-valuenow="<%= @percentage %>" aria-valuemin="0" aria-valuemax="100"><%= @percentage.to_i %>%</div>
      </div>

  </div>

</div>