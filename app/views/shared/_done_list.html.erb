<div class="scroll">
  <div class="lists">
    <div class="done-list">
    <ul>
      <% @done_lists.sort_by { |item| -item[:id] }.each do |item| %>
        <li class="list" data-item-id="<%= item.id %>" data-controller="checked-list">
          <%= form_for(item, url: item_path(item), method: :patch, html: { class: "status-form", data: { target: "checked-list.form" } }) do |f| %>
            <%= f.check_box :completed, class: "status-checkbox", checked: item.completed, data: { target: "checked-list.checkbox" } %>
            <%= f.label item.title %>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="gray" class="bi bi-three-dots-vertical" viewBox="0 0 16 16" style="display: inline-block; float: right;">
            <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0"/>
          </svg>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>



